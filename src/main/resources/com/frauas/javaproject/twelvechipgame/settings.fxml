<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frauas.javaproject.twelvechipgame.controller.SettingsController">
   <children>
      <Label layoutX="235.0" layoutY="62.0" text="Screen Resolution">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <RadioButton fx:id="hd" layoutX="257.0" layoutY="120.0" mnemonicParsing="false" selected="true" text="1280 x 720" onAction="#setResolution">
         <toggleGroup>
            <ToggleGroup fx:id="resolution" />
         </toggleGroup></RadioButton>
      <RadioButton fx:id="fullHD" layoutX="257.0" layoutY="156.0" mnemonicParsing="false" text="1920 x 1080" toggleGroup="$resolution" onAction="#setResolution" />
      <RadioButton fx:id="quadHD" layoutX="258.0" layoutY="191.0" mnemonicParsing="false" text="2560 x 1440" toggleGroup="$resolution" onAction="#setResolution"/>
      <Button layoutX="235.0" layoutY="253.0" mnemonicParsing="false" onAction="#switchToMainMenu" text="Return to Main Menu" />
   </children>
</AnchorPane>
